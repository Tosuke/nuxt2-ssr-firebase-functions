{
  "name": "blog",
  "version": "1.0.0",
  "description": "Tosuke's blog",
  "author": "Tosuke <tasukeprg@gmail.com>",
  "private": true,
  "main": "build/functions.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development backpack dev",
    "serve": "run-s build deploy:cpx:* serve:firebase",
    "serve:firebase": "firebase serve",
    "deploy": "run-s build deploy:cpx:* deploy:firebase",
    "deploy:firebase": "firebase deploy --only hosting,functions:index",
    "start": "node build/main.js",
    "build": "run-p build:*",
    "build:nuxt": "nuxt build",
    "build:backpack": "backpack build",
    "deploy:clean": "rimraf 'dist'",
    "deploy:cpx:functions": "cpx '{package.json,{build,.nuxt,static}/**/*}' dist/functions",
    "deploy:cpx:hostings:assets": "cpx '.nuxt/dist/{*.js,img/**/*}' dist/hostings",
    "deploy:cpx:hostings:static": "cpx 'static/**/*' dist/hostings",
    "precommit": "npm run lint",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "dependencies": {
    "core-js": "^2.5.7",
    "cross-env": "^5.0.1",
    "debug": "^3.1.0",
    "express": "^4.15.3",
    "firebase-admin": "^5.12.1",
    "firebase-functions": "^1.0.3",
    "lodash": "^4.17.10",
    "nuxt-edge": "^2.0.0-25452542.7f9d16c",
    "regenerator-runtime": "^0.11.1",
    "source-map-support": "^0.4.15",
    "util.promisify": "^1.0.0",
    "vue": "^2.5.16",
    "vue-meta": "^1.5.0",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.3.2",
    "babel-eslint": "^7.2.3",
    "backpack-core": "^0.4.1",
    "cpx": "^1.5.0",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2"
  }
}
